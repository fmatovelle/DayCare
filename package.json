{
  "name": "daycare-mvp",
  "version": "1.0.0",
  "description": "Sistema de comunicación para guarderías/preescolares",
  "private": true,
  "workspaces": [
    "backend",
    "mobile", 
    "web",
    "shared"
  ],
  "scripts": {
    "setup": "npm run install:all && npm run build:shared",
    "install:all": "npm install && npm run install:backend && npm run install:mobile && npm run install:web && npm run install:shared",
    "install:backend": "cd backend && npm install",
    "install:mobile": "cd mobile && npm install", 
    "install:web": "cd web && npm install",
    "install:shared": "cd shared && npm install",
    "build:shared": "cd shared && npm run build",
    "dev:all": "concurrently -n \"Backend,Web\" -c \"blue,green\" \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:mobile": "cd mobile && npx expo start",
    "dev:web": "cd web && npm run dev",
    "build:all": "npm run build:shared && npm run build:backend && npm run build:web",
    "build:backend": "cd backend && npm run build",
    "build:mobile": "cd mobile && npx expo build",
    "build:web": "cd web && npm run build",
    "test:all": "npm run test:backend && npm run test:web && npm run test:mobile",
    "test:backend": "cd backend && npm run test",
    "test:mobile": "cd mobile && npm run test", 
    "test:web": "cd web && npm run test",
    "clean": "rm -rf node_modules backend/node_modules mobile/node_modules web/node_modules shared/node_modules",
    "docker:up": "docker-compose up -d postgres redis",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0", 
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
